<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:layout_gravity="bottom"
    android:orientation="vertical">

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/tab_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="10dp">

        <RadioButton
            android:id="@+id/tab_book"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@mipmap/tab_comprehensive_icon"
            android:gravity="center"
            android:text="@string/book"
            android:textColor="@color/tab_text_bg" />

        <RadioButton
            android:id="@+id/tab_joyful"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@mipmap/tab_move_icon"
            android:gravity="center"
            android:text="@string/joyful"
            android:textColor="@color/tab_text_bg" />

        <RadioButton
            android:id="@+id/tab_found"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@mipmap/tab_found_icon"
            android:gravity="center"
            android:text="@string/found"
            android:textColor="@color/tab_text_bg" />

        <RadioButton
            android:id="@+id/tab_about"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@mipmap/tab_me_icon"
            android:gravity="center"
            android:text="@string/about"
            android:textColor="@color/tab_text_bg" />

    </RadioGroup>
</LinearLayout>